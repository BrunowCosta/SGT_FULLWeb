<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">

	<application>        
		<message-bundle>br.com.empresa.sgt.mensagens.mensagens</message-bundle>
		<message-bundle>br.com.empresa.sgt.mensagens.mensagens_en</message-bundle>
		<resource-bundle>
			<base-name>br.com.empresa.sgt.mensagens.mensagens</base-name>
			<var>msg</var>
		</resource-bundle>	
		<locale-config>            
			<default-locale>pt_BR</default-locale>    
			<supported-locale>en_GB</supported-locale>
			<supported-locale>de</supported-locale>
		</locale-config>
	</application>
	
	<factory>
	  <exception-handler-factory>
	  	br.com.empresa.sgt.exception.CustomExceptionHandlerFactory
	  </exception-handler-factory>
	</factory>
	
</faces-config>
